<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vh_height"
    android:background="@drawable/border"
    android:layout_marginBottom="@dimen/margin"
    android:id="@+id/view_holder">

    <ImageView
        android:id="@+id/iv_cat_holder"
        android:layout_width="@dimen/iv_height_weight"
        android:layout_height="@dimen/iv_height_weight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border"
        />

    <TextView
        android:id="@+id/tv_cat_holder_id"
        android:text="@string/image_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cat_holder"
        app:layout_constraintLeft_toRightOf="@id/iv_cat_holder"
        app:layout_constraintTop_toTopOf="@+id/iv_cat_holder"
        android:layout_marginStart="@dimen/margin"
        />


</androidx.constraintlayout.widget.ConstraintLayout>